@model List<Category>

@{
    ViewData["Title"] = "Index";
}


<h1>
    <a asp-controller="Category" asp-action="Create" class="btn btn-secondarys button-add" type="button">
        <i class="fa-solid fa-plus icon-plus" style="padding-top: 10px; --plus"></i>
    </a>
</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Category ID
            </th>
            <th>Name
            </th>
            <th>
                 Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
              
                <td>
                    @item.Description
                </td>
                
                <td>
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>

                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                </td>


                <td>
                    <a asp-controller="Category" asp-action="Confirm" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

