@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>

            <th>
                Email
            </th>
            <th>
                UserName
            </th>
            <th>
                Password
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.UserName
                </td>

                <td>
                    *********
                </td>

                <td>
                    <a asp-controller="Admin" asp-action="Edit" class="action-icon" asp-route-id="@item.Id"> <i class="mdi mdi-square-edit-outline "></i></a>
                </td>


            </tr>
        }

    </tbody>
</table>
