@model NotUseAuto.Models.Product

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Product</h4>
<hr />
<br>
<form class="needs-validation" novalidate asp-controller="Products" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="validationCustom01"
             required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" id="validationCustom02"
               required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" id="validationCustom03"
               required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" id="validationCustom04"
               required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="form-group mb-3">
        <select asp-for="CategoryId" class="form-control" required>
            <option value="0">Please select 1 category :)</option>
            @{
                foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }

        </select>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

